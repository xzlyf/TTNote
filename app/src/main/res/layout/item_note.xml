<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_10"
    android:minHeight="@dimen/dp_60"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/dp_5"
    app:cardElevation="@dimen/dp_5">

    <FrameLayout
        android:layout_width="match_parent"

        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_item_2"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical"
            android:padding="@dimen/dp_10">

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxEms="36"
                android:text="今天见到一块钱\nIDE and Plugin Updates\nAndroid Studio i
            s ready\n ot update...12313131."
                android:textColor="@color/primary_text" />

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="@dimen/dp_10"
                android:text="2019年10月17日" />
        </LinearLayout>

        <FrameLayout
            android:id="@+id/layout_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/selector_item_2"
            android:clickable="true"
            android:focusable="true"
            android:padding="@dimen/dp_10"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/delete"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:background="@drawable/selector_item_4"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:text="删除"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/share"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:layout_marginLeft="@dimen/dp_30"
                    android:background="@drawable/selector_item_3"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:text="分享"
                    android:textColor="@color/white" />
            </LinearLayout>
        </FrameLayout>
    </FrameLayout>


</androidx.cardview.widget.CardView>